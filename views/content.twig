<article {{ function('post_class') }} id="post-{{post.ID}}">
	{% block content %}
        <h1 class="h2"><a href="{{post.get_path}}">{{post.title}}</a></h1>
        <p>{{post.get_preview}}</p>

		{% if post.get_thumbnail %}
        <img src="{{post.get_thumbnail.get_url}}" />
		{% endif %}
	{% endblock %}
</article>