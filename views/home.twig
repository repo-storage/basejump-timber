{% extends base_twig %}
{% block cover %}
<section id="cover" class="cover fold">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h1 class="fixie mast-head">Starter</h1>

                <p class="fixie">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Architecto blanditiis cumque
                    cupiditate dolorum ea error fuga fugiat harum impedit iure labore laborum obcaecati quo quod, soluta
                    velit veritatis vero voluptatibus.</p>
            </div>
            <div class="col-md-8">
                <figure>
                    <img src="http://lorempixel.com/820/380/technics" alt=""/>
                </figure>
            </div>
        </div>
    </div>
</section>
{% endblock cover %}
{% block content %}
<div class="col-md-8 post">
{% for post in posts %}
		{% include ['content-'~post.format_post~'.twig', 'content.twig'] %}
	{% endfor %}
    </div>

{% endblock content %}

{% block sidebar %}
<div id="sidebar" class="col-ms-4 sidebar">
{% if home_sidebar is empty %}
<aside>
    <h1>Home Sidebar</h1>
    <p>{{ sample_widget }}</p>
</aside>
{% endif %}
{{ home_sidebar }}
</div>
{% endblock sidebar %}